#include <stdio.h>
int main()
{
int d, b, x;
printf("Enter the decimal number to be converted");
scanf("%d", &d);
printf("%d The corrosponding binary number =\n", b);
 
  for (b= 31; b >= 0; b--)
  {
    x = d >> b;
 
    if (x & 1)
      printf("1");
      
    else
      printf("0");
  }
 
  printf("\n");
 
  return 0;
}
